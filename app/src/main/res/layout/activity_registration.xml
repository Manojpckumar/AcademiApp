<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sysirohub.academicapp.RegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.3dp"
            android:orientation="horizontal">

            <com.sysirohub.academicapp.CustomViews.CustomMainHeading
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="32dp"
                android:gravity="center_horizontal"
                android:text="Register"
                android:textColor="#333232"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7.3dp"
                    android:background="@drawable/small_cicle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/half_circle"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/half_circle" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:paddingLeft="14.5dp">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <View
                   android:layout_width="5.6dp"
                   android:layout_height="wrap_content"
                   android:background="#38b5f2" />

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="35.6dp"
                   android:background="@drawable/rectangle">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="13dp"
                       android:layout_marginRight="19dp"
                       android:orientation="vertical">


                       <com.sysirohub.academicapp.CustomViews.CustomSubHeading
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="20.3dp"
                           android:gravity="center_horizontal"
                           android:text="Hello!!"
                           android:visibility="gone"
                           android:textColor="#333232"
                           android:textSize="16.7sp" />

                       <com.sysirohub.academicapp.CustomViews.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="22.3dp"
                           android:text="Name"
                           android:textColor="#9e9d9d"
                           android:textSize="12.3sp" />

                       <com.sysirohub.academicapp.CustomViews.CustomEditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/edName"
                           android:maxLines="1"
                           android:background="@android:color/transparent"
                           android:paddingTop="5dp"
                           android:textColorHint="#333232"
                           android:textCursorDrawable="@drawable/cursor_color"
                           android:textSize="15sp" />

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="5dp"
                           android:background="#9e9e9e" />


                       <com.sysirohub.academicapp.CustomViews.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="22.3dp"
                           android:text="Email"
                           android:textColor="#9e9d9d"
                           android:textSize="12.3sp" />

                       <com.sysirohub.academicapp.CustomViews.CustomEditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/edtMail"
                           android:maxLines="1"
                           android:background="@android:color/transparent"
                           android:paddingTop="5dp"
                           android:textColorHint="#333232"
                           android:textCursorDrawable="@drawable/cursor_color"
                           android:textSize="15sp" />


                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="5dp"
                           android:background="#9e9e9e" />


                       <com.sysirohub.academicapp.CustomViews.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="23dp"
                           android:text="Password"
                           android:textColor="#9e9d9d"
                           android:textSize="12.3sp" />


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingTop="5dp">


                           <com.sysirohub.academicapp.CustomViews.CustomEditText
                               android:id="@+id/edtPassword"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@android:color/transparent"
                               android:inputType="textPassword"
                               android:maxLines="1"
                               android:textColor="#333232"
                               android:textCursorDrawable="@drawable/cursor_color"
                               android:textSize="15sp" />

                           <com.sysirohub.academicapp.CustomViews.CustomTextView
                               android:id="@+id/txtforgot"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:layout_gravity="bottom"
                               android:gravity="bottom"
                               android:text="I Forgot"
                               android:textColor="#38b5f2"
                               android:textSize="13.3sp" />

                       </RelativeLayout>

                       <View
                           android:id="@+id/view"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="5dp"
                           android:background="#9e9e9e" />

                       <com.sysirohub.academicapp.CustomViews.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="22.3dp"
                           android:text="Mobile"
                           android:textColor="#9e9d9d"
                           android:textSize="12.3sp" />



                       <com.sysirohub.academicapp.CustomViews.CustomEditText
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:maxLines="1"
                           android:id="@+id/edtMobile"
                           android:background="@android:color/transparent"
                           android:paddingTop="5dp"
                           android:inputType="number"
                           android:textColorHint="#333232"
                           android:textCursorDrawable="@drawable/cursor_color"
                           android:textSize="15sp" />

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="5dp"
                           android:background="#9e9e9e" />

                       <com.sysirohub.academicapp.CustomViews.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="22.3dp"
                           android:text="Account Type"
                           android:textColor="#9e9d9d"
                           android:textSize="12.3sp" />



                       <Spinner
                           android:id="@+id/spnAccountType"
                           android:entries="@array/accountType"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:background="@android:color/transparent"
                           android:paddingTop="5dp"
                           android:textCursorDrawable="@drawable/cursor_color"
                           android:textSize="15sp" />

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_marginTop="5dp"
                           android:background="#9e9e9e" />


                   </LinearLayout>


                   <LinearLayout
                       android:gravity="center"
                       android:layout_marginTop="50dp"
                       android:id="@+id/btn_register"
                       android:layout_width="90dp"
                       android:layout_height="41dp"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentBottom="true"
                       android:layout_gravity="center"
                       android:background="@drawable/full_blue_rounded"
                       android:orientation="vertical">

                       <com.sysirohub.academicapp.CustomViews.CustomMainHeading
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Register"
                           android:textColor="@color/white"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textSize="15sp" />


                   </LinearLayout>


               </LinearLayout>

           </LinearLayout>



        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="85.6dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#d2d2d2" />

            <com.sysirohub.academicapp.CustomViews.CustomSubHeading
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Social Login"
                android:textColor="#aeaeae"
                android:textSize="13.3sp" />

            <View
                android:layout_width="85.6dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#d2d2d2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:src="@drawable/fb" />

            <ImageView
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/instagram" />

            <ImageView
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:src="@drawable/linkedin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.sysirohub.academicapp.CustomViews.CustomSubHeading
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Already have an account ?"
                android:textColor="#333232"
                android:textSize="13.3sp" />

            <com.sysirohub.academicapp.CustomViews.CustomSubHeading
                android:onClick="GoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:text="Log In"
                android:textColor="#38b5f2"
                android:textSize="13.3sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>