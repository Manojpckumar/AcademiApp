<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sysirohub.academicapp.CustomViews.CustomMainHeading
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="@color/third"
            android:textColor="@color/white"
            android:text="Add Time Table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sysirohub.academicapp.CustomViews.CustomSubHeading
            android:layout_width="match_parent"
            android:text="Select days"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:background="@drawable/input_back"
            android:id="@+id/spnDays"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.sysirohub.academicapp.CustomViews.CustomSubHeading
            android:layout_width="match_parent"
            android:text="Select class"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:background="@drawable/input_back"
            android:id="@+id/spnClasses"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.sysirohub.academicapp.CustomViews.CustomSubHeading
            android:layout_width="match_parent"
            android:text="Select subjects"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:background="@drawable/input_back"
            android:id="@+id/spnSubjects"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.sysirohub.academicapp.CustomViews.CustomSubHeading
            android:layout_width="match_parent"
            android:text="Select start time"
            android:layout_height="wrap_content"/>

        <com.sysirohub.academicapp.CustomViews.CustomEditText
            android:id="@+id/edStartTime"
            android:hint="enter start time ( tap to select )"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:background="@drawable/input_back"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.sysirohub.academicapp.CustomViews.CustomSubHeading
            android:layout_width="match_parent"
            android:text="Select end time"
            android:layout_height="wrap_content"/>

        <com.sysirohub.academicapp.CustomViews.CustomEditText
            android:id="@+id/edEndTime"
            android:hint="enter end time ( tap to select )"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:background="@drawable/input_back"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


        <com.sysirohub.academicapp.CustomViews.CustomButton
            android:id="@+id/btnAddTimeTable"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Add Time Table"
            android:textAllCaps="false"
            android:background="@drawable/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>