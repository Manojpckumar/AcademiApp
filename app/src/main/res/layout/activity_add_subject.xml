<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sysirohub.academicapp.CustomViews.CustomMainHeading
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="@color/third"
            android:textColor="@color/white"
            android:text="Add Subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnClassNames"
            android:background="@drawable/input_back"
            android:hint="class name"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <com.sysirohub.academicapp.CustomViews.CustomEditText
            android:layout_marginTop="15dp"
            android:id="@+id/edSubjectName"
            android:hint="class name"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:background="@drawable/input_back"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


        <com.sysirohub.academicapp.CustomViews.CustomButton
            android:id="@+id/btnAddSubject"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:text="Add Subject"
            android:textAllCaps="false"
            android:background="@drawable/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>